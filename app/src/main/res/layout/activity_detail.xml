<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bone"
    android:orientation="vertical"
    tools:context=".ui.story.detail.DetailActivity">

    <ImageView
        android:id="@+id/imgStoryThumbnail"
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:contentDescription="@string/img_detail"
        android:transitionName="thumbnail"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/colorGrey" />

    <TextView
        android:id="@+id/tvStoryTitle"
        style="@style/TextContent.Title"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="24sp"
        android:transitionName="title"
        tools:text="Story Title" />

    <TextView
        android:id="@+id/tvStoryDesc"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/poppins"
        android:transitionName="description"
        tools:text="@string/label_lorem_ipsum" />

</LinearLayout>